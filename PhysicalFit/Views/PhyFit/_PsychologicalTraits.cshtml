@model PhysicalFit.Models.PsychologicalTraitsViewModel
<table id="PsychologicalTraitsTable" class="table table-bordered">
    <thead>
        <tr>
            <th>日期</th>
            <th>狀態項目</th>
            <th>感受</th>
        </tr>
    </thead>
    <tbody id="psychologicalRows">
        <tr class="psychological-group">
            <td>
                <input class="psychological-date form-control" name="PsychologicalDate" title="日期" />
            </td>
            <td>
                <div class="form-group" style="display: inline-block; max-width: 100%;">
                    <!-- 將狀態項目呈現為列表 -->
                    <ul class="list-unstyled">
                        @foreach (var item in ViewBag.Psychological)
                        {
                            <li>
                                <input type="checkbox" name="psychological" value="@item" id="psychological_@item" />
                                <label for="psychological_@item">@item</label>
                            </li>
                        }
                    </ul>
                </div>
                @*<div class="form-group" style="display: inline-block; max-width: 100%;">
            <select class="form-control" onchange="updateStatusActions(this)" id="psychological" name="psychological" style="width: auto; min-width: 200px; display: inline-block;">
                <option value="">請選擇狀態項目</option>
                @foreach (var item in ViewBag.Psychological)
                {
                    <option value="@item" style="width: 50px;">@item</option>
                }
            </select>
        </div>*@
            </td>
            <td>
                <div class="form-group" style="display: inline-block; max-width: 100%;">
                    <select class="form-control" name="psychologicalStatus" style="width: auto; min-width: 200px; display: inline-block;">
                        <option>請選擇感受</option>
                    </select>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        // 初始化 flatpickr 日期選擇器
        function initializeFlatpickr() {
            flatpickr(".psychological-date", {
                enableTime: false,
                dateFormat: "Y-m-d",
                time_24hr: true
            });
        }

        initializeFlatpickr(); //初始加載時初始化 flatpickr
    });
</script>