@{
    Layout = "~/Views/Shared/_PhyFitness.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>帳號註冊</title>
    <link href="~/css/registerStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="register-container">
        <div class="text-center">
            <img src="~/img/logo.svg" alt="Logo" style="height: 45px; width: 100%;">
        </div>
        <form action="/PhyFit/Register" method="post">
            <div class="form-group">
                <label for="Username">帳號</label>
                <input type="text" class="form-control" id="Username" name="UserName" placeholder="請輸入帳號" required>
            </div>
            <div class="form-group">
                <label for="Password">密碼</label>
                <input type="password" class="form-control" id="Password" name="pwd" placeholder="請輸入密碼" required>
            </div>
            <div class="form-group">
                <label for="Email">電子郵件</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="請輸入電子郵件" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">註冊</button>
        </form>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</body>
</html>