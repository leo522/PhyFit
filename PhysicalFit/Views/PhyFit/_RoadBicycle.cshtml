@model List<string>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/BikeCalculate.js"></script> @*自由車計算公式*@
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header">
                        <h4>有/無氧代謝能力測定：<span id="selectedSportItem"></span></h4>
                        <p>先測遞增負荷最大功率，再測4種次最大功率騎之力竭時間。</p>
                    </div>
                    <div class="card-body">
                        <label for="MaxSpeed">最大功率(W)：</label>
                        <input id="MaxSpeed" type="text" class="form-control" placeholder="請輸入最大功率瓦數" oninput="CaculatePowerSpeed()" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-end" style="margin-top:20px;">
            <div class="col-md-7">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>強度百分比</th>
                                    <th>力竭時間(s)</th>
                                    <th>速度(km/h)</th>
                                </tr>
                            </thead>
                            <tbody id="dataTable">
                                @foreach (var distance in Model)
                                {
                                    <tr>
                                        <td>@distance</td>
                                        <td>
                                            <input type="text" class="bike-time" data-distance="@distance" oninput="calculateBikeSpeed(this)" />
                                        </td>
                                        <td class="bike-speed"></td>
                                    </tr>
                                }
                            </tbody>
                            <tr>
                                <td><i>r</i> <sup>2</sup></td>
                                <td colspan="2">
                                    <input type="text" id="calculationResult" class="form-control" readonly />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>