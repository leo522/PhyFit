@model List<string>
@{
    Layout = "~/Views/Shared/_PhyFitness.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/RollerSkatingCaculate.js"></script>
    @*滑輪溜冰計算公式*@
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>有/無氧代謝能力測定：<span id="selectedSportItem"></span></h4>
                        <a>測3-4種距離的力竭時間。</a>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>距離(m)</th>
                                        <th>力竭時間(s)</th>
                                        <th>速度(km/h)</th>
                                    </tr>
                                </thead>
                                <tbody id="dataTable">
                                    @foreach (var distance in Model)
                                    {
                                        <tr>
                                            <td>@distance</td>
                                            <td><input type="text" class="exhaustion-time" data-distance="@distance" oninput="calculateSpeed(this)" /></td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                                <tr>
                                    <td><i>r</i> <sup>2</sup></td>
                                    <td><input type="text" id="calculationResult" class="form-control" readonly /></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
