@model string

<thead>
    <tr>
        @if (Model == "專項技術類")
        {
            <th>日期</th>
            <th>項目</th>
            <th>動作名稱</th>
            <th>訓練動作名稱</th>
            <th>欄位增減</th>
        }
        else if (Model == "混合肌力體能類")
        {
            <th>日期</th>
            <th>時間</th>
            <th>自覺費力程度</th>
            <th>欄位增減</th>
        }
        else if (Model == "肌力類")
        {
            <th>日期</th>
            <th>訓練部位</th>
            <th>時間</th>
            <th>自覺費力程度</th>
            <th>欄位增減</th>
        }
        else if (Model == "體能類")
        {
            <th>日期</th>
            <th>訓練類型</th>
            <th>時間</th>
            <th>自覺費力程度</th>
            <th>欄位增減</th>
        }
    </tr>
</thead>
<tbody>
    @if (Model == "專項技術類")
    {
        <tr class="training-group">
            <td><input type="date" class="form-control" name="TrainingDate" title="日期" /></td>
            <td>
                <select class="form-control" name="SpecialTech" onchange="updateTechnicalActions(this)">
                    <option>請選擇項目</option>
                    @foreach (var ST in ViewBag.SpecialTechnical)
                    {
                        <option value="@ST">@ST</option>
                    }
                </select>
            </td>
            <td>
                <select class="form-control" name="SpecialTechName">
                    <option>請選擇項目</option>
                </select>
            </td>
            <td>
                <input class="SpecialTechOther" placeholder="請自行填選其他動作名稱" />
            </td>
            <td>
                <button type="button" class="btn btn-primary add-row-special">+</button>
                <button type="button" class="btn btn-danger remove-row-special">-</button>
            </td>
        </tr>
    }
    else if (Model == "混合肌力體能類")
    {
        <tr class="training-group">
            <td><input type="date" class="form-control" name="TrainingDate" title="日期" /></td>
            <td>
                <select class="form-control" name="TrainingTime">
                    <option>請選擇訓練時間</option>
                    @foreach (var time in ViewBag.TrainingTimes)
                    {
                        <option>@time</option>
                    }
                </select>
            </td>
            <td>
                <input type="text" class="form-control rpeInput" name="RPE_Description" style="width:200px;" placeholder="請選擇訓練感受" readonly />
                <input type="hidden" name="RPE" />
                <button type="button" class="btn btn-info openRPEModal">運動自覺量表</button>
            </td>
            <td>
                <button type="button" class="btn btn-primary add-row">+</button>
                <button type="button" class="btn btn-danger remove-row">-</button>
            </td>
        </tr>
    }
    else if (Model == "肌力類")
    {
        <tr class="training-group">
            <td><input type="date" class="form-control" name="TrainingDate" title="日期" /></td>
            <td>
                <select class="form-control" name="TrainingMuscle">
                    <option>請選擇訓練部位</option>
                    @foreach (var MS in ViewBag.MuscleStrength)
                    {
                        <option>@MS</option>
                    }
                </select>
            </td>
            <td>
                <select class="form-control" name="TrainingTime">
                    <option>請選擇訓練時間</option>
                    @foreach (var time in ViewBag.TrainingTimes)
                    {
                        <option>@time</option>
                    }
                </select>
            </td>
            <td>
                <input type="text" class="form-control rpeInput" name="RPE_Description" style="width:200px;" placeholder="請選擇訓練感受" readonly />
                <input type="hidden" name="RPE" />
                <button type="button" class="btn btn-info openRPEModal">運動自覺量表</button>
            </td>
            <td>
                <button type="button" class="btn btn-primary add-row">+</button>
                <button type="button" class="btn btn-danger remove-row">-</button>
            </td>
        </tr>
    }
    else if (Model == "體能類")
    {
        <tr class="training-group">
            <td><input type="date" class="form-control" name="TrainingDate" title="日期" /></td>
            <td>
                <select class="form-control" name="TrainingMuscle">
                    <option>請選擇訓練類型</option>
                    @foreach (var PF in ViewBag.PhysicalFitness)
                    {
                        <option>@PF</option>
                    }
                </select>
            </td>
            <td>
                <select class="form-control" name="TrainingTime">
                    <option>請選擇訓練時間</option>
                    @foreach (var time in ViewBag.TrainingTimes)
                    {
                        <option>@time</option>
                    }
                </select>
            </td>
            <td>
                <input type="text" class="form-control rpeInput" name="RPE_Description" style="width:200px;" placeholder="請選擇訓練感受" readonly />
                <input type="hidden" name="RPE" />
                <button type="button" class="btn btn-info openRPEModal">運動自覺量表</button>
            </td>
            <td>
                <button type="button" class="btn btn-primary add-row">+</button>
                <button type="button" class="btn btn-danger remove-row">-</button>
            </td>
        </tr>
    }
</tbody>