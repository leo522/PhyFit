        <script>
    function updateTechnicalActions(selectElement) {
    var selectedTechnical = selectElement.value;
    var actionDropdown = selectElement.closest('tr').querySelector('[name="SpecialTechName"]');

    $.ajax({
        url: '@Url.Action("GetSpecialTechnicalActions", "PhyFit")',
        type: 'GET',
        data: { technicalItem: selectedTechnical },
        success: function (data) {
            actionDropdown.innerHTML = '';

            // Add default option
            var defaultOption = document.createElement("option");
            defaultOption.text = "請選擇動作名稱";
            actionDropdown.add(defaultOption);

            // Populate the dropdown with received data
            data.forEach(function (item) {
                var option = document.createElement("option");
                option.value = item;
                option.text = item;
                actionDropdown.add(option);
            });
        }
    });
        }
        document.addEventListener('DOMContentLoaded', function () {
            // 處理一般訓練的計算按鈕
            document.getElementById('btn_calculate').addEventListener('click', function (event) {
                var dateInput = document.querySelector('input[name="TrainingDate"]');

                if (!dateInput || !dateInput.value) {
                    event.preventDefault(); // 防止表單提交
                    Swal.fire({
                        icon: 'warning',
                        title: '請先選擇日期',
                        text: '計算前請選擇日期，否則無法進行計算。',
                        confirmButtonText: '了解'
                    });
                }
            });

            // 處理射箭訓練的計算按鈕
            document.getElementById('btn_calculate_archery').addEventListener('click', function (event) {
                var ArcherydateInput = document.querySelector('input[name="archeryDate"]');

                if (!ArcherydateInput || !ArcherydateInput.value) {
