@model PhysicalFit.Models.ForgotPwdViewModel
@{
    Layout = null;
}

@{
    ViewBag.Title = "忘記密碼";
}

<h2>忘記密碼</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label for="AthleteID">身份證號碼</label>
        <input type="text" class="form-control" id="AthleteID" name="AthleteID" required />
    </div>

    <button type="submit" class="btn btn-primary">請求臨時密碼</button>
}