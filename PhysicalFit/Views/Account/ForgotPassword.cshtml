@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>忘記密碼</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/Img/favicon.svg" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #1A2A4F;
        }

        .login-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="text-center">
            <img src="~/Img/logo.svg" alt="Logo" style="height: 45px; width: 100%;">
        </div>
        <form action="/Account/SendResetLink" method="post">
            <div class="form-group">
                <label for="Email" title="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required>
            </div>
            <div class="form-group">
                <label for="NewPassword">新密碼</label>
                <input type="password" class="form-control" name="NewPassword" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">重設密碼</button>
        </form>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</body>
</html>

