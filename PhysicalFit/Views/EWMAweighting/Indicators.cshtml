@model PhysicalFit.Models.EWMAViewModel
@{
    ViewBag.Title = "Indicators";
    Layout = "~/Views/Shared/_PhyFitness.cshtml";
}
@using (Html.BeginForm("Calculate", "EWMAweighting", FormMethod.Post))
{
    <div>
        <label for="N">樣本數 (N):</label>
        @Html.TextBoxFor(m => m.N, new { @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">計算</button>
}

@if (Model != null && Model.Result != 0)
{
    <h3>計算結果</h3>
    <p>Alpha: @Model.Alpha</p>
    <p>EWMA 權重: @Model.Result</p>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}