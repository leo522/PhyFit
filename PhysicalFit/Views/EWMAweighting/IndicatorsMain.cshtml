@model PhysicalFit.Models.EWMAViewModel
@{
    ViewBag.Title = "心理特質與食慾圖量表";
    Layout = "~/Views/Shared/_PhyFitness.cshtml";
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Indicators</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/EWMAStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>心理特質與食慾圖量表</h2>
        <table>
            <thead>
                <tr>
                    <th>指標(Indicators)</th>
                    <th>急性(Acute)</th>
                    <th>慢性(Chronic)</th>
                    <th>急慢性訓練負荷比(ACWR)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td data-label="Indicators">自覺程度(sRPE)</td>
                    <td data-label="Acute">15</td>
                    <td data-label="Chronic">9.02</td>
                    <td data-label="ACWR">1.68</td>
                </tr>
                <tr>
                    <td data-label="Indicators">睡眠品質(Sleep Quality)</td>
                    <td data-label="Acute">8</td>
                    <td data-label="Chronic">7.5</td>
                    <td data-label="ACWR">1.07</td>
                </tr>
                <tr>
                    <td data-label="Indicators">疲勞程度(Fatigue Level)</td>
                    <td data-label="Acute">6</td>
                    <td data-label="Chronic">5.5</td>
                    <td data-label="ACWR">1.09</td>
                </tr>
                <tr>
                    <td data-label="Indicators">食慾(Appetite)</td>
                    <td data-label="Acute">7</td>
                    <td data-label="Chronic">6.5</td>
                    <td data-label="ACWR">1.08</td>
                </tr>
                <tr>
                    <td data-label="Indicators">培訓意願(Willingness of Training)</td>
                    <td data-label="Acute">9</td>
                    <td data-label="Chronic">8.5</td>
                    <td data-label="ACWR">1.06</td>
                </tr>
                <tr>
                    <td data-label="Indicators">參賽意願(Willingness of Race)</td>
                    <td data-label="Acute">10</td>
                    <td data-label="Chronic">9.5</td>
                    <td data-label="ACWR">1.05</td>
                </tr>
            </tbody>
        </table>
        <form action="/EWMAweighting/Calculate" method="post">
            <div class="form-group">
                <label for="N">樣本數 (N):</label>
                <input type="number" id="N" name="N" class="form-control" required="required" />
            </div>
            <button type="submit" class="btn btn-success">計算</button>
        </form>

        <!-- 計算結果 -->
        <div id="result">
            <h3>計算結果</h3>
            <p>Alpha: @Model.Alpha</p>
            <p>EWMA 權重: @Model.Result</p>
        </div>

        @Html.ValidationSummary()
    </div>
    <a href="/PhyFit/dashboard" class="btn btn-primary">回主頁</a>
</body>
</html>