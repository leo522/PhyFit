@{
    ViewBag.Title = "登入";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form action="/UserAccountController/Login" method="post" class="login-form needs-validation animate-fade-in" novalidate>
    <div class="mb-3">
        <label for="account" class="form-label">帳號</label>
        <input type="text" class="form-control" id="account" name="account" placeholder="請輸入帳號" required />
        <div class="invalid-feedback">請輸入帳號。</div>
    </div>
    <div class="mb-3">
        <label for="pwd" class="form-label">密碼</label>
        <input type="password" class="form-control" id="pwd" name="pwd" placeholder="請輸入密碼" required />
        <div class="invalid-feedback">請輸入密碼。</div>
    </div>
    <button type="submit" class="btn btn-primary w-100">登入</button>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-info mt-3" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="text-center mt-3 small">
        <a href="/Account/Register">註冊帳號</a>
        <hr />
        <a href="/Account/ForgotPassword" class="btn btn-link p-0">忘記密碼 - 教練使用</a><br />
        <a href="/Account/ForgotPwd" class="btn btn-link p-0">忘記密碼 - 學生使用</a>
    </div>
</form>